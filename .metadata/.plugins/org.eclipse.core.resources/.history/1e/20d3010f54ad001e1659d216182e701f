package com.platformCommons.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.platformCommons.exceptions.StudentException;
import com.platformCommons.model.Student;
import com.platformCommons.model.StudentDto;
import com.platformCommons.repo.AddressRepo;
import com.platformCommons.repo.StudentRepo;

@Service
public class StudentServiceImpl implements StudentService{
	
	@Autowired
	private StudentRepo studentRepo;
	
	@Autowired
	private AddressRepo addressRepo;

	@Override
	public Student addStudent(StudentDto studentDto) throws StudentException {
		if(studentRepo.findByEmail(studentDto.getEmail()) != null)
			throw new StudentException("Student already exists with the email:- "+studentDto.getEmail());
		
		Student student = new Student(studentDto.getName(), studentDto.getEmail(), studentDto.getPassword());
		Address address = new Address(studentDto.getAddress().getCity(), studentDto.getAddress().getColony(), customerDto.getAddress().getCity(), customerDto.getAddress().getState(), customerDto.getAddress().getPinCode(), customer);
		customer.setAddress(address);
		return cRepo.save(customer);
	}

}
